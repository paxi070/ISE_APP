<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view1"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/foto1"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/home_one" />
                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/foto1"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="Homestay"
                        android:textColor="#222"
                        android:textStyle="bold"
                        android:textSize="22dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title1"
                        android:padding="8dp"
                        android:text="Homestays are the best option to experience the culture and learn more about local people. This is highly recommended for students who want to be immersed in the Irish life style, with home cooking and the opportunity to practice the language through conversation. The student can also experience living in a typical environment, which will enrich their knowledge of the local culture."
                        android:textSize="14dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/foto2"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/home_two" />
                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/foto2"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="Distance from School"
                        android:textColor="#222"
                        android:textStyle="bold"
                        android:textSize="22dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title2"
                        android:padding="8dp"
                        android:text="Host Families live in the suburbs away from Dublin city centre close to public transport services. It is necessary for all students to travel to school by public transport. We advise all students to expect a journey time of at least 40 minutes."
                        android:textSize="14dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="430dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/foto3"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/home_three" />
                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/foto3"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="Facilities"
                        android:textColor="#222"
                        android:textStyle="bold"
                        android:textSize="22dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title3"
                        android:padding="8dp"
                        android:text="Single or twin room, shared family bathroom, light laundry facilities. Host families also provide â€˜half board', meaning breakfast and an evening meal, Monday to Friday, and breakfast, small lunch and evening meal on Saturday and Sunday. Special request (dietary, pets, children etc) must be made at the time of the initial booking."
                        android:textSize="14dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view3"
                android:layout_width="match_parent"
                android:layout_height="460dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/foto4"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/residence_1" />
                    <TextView
                        android:id="@+id/title4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/foto4"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="Student Residence"
                        android:textColor="#222"
                        android:textStyle="bold"
                        android:textSize="22dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title4"
                        android:padding="8dp"
                        android:text="Our houses are intended for individuals who really want to enjoy the student accommodation experience. All of our residences are located in safe areas of the city and most of them are close to the College. These residences are well equipped with all standard conveniences such as TV, washing machine, dishwasher, microwave, cooker and central heating. Free broadband Internet access. Our student residences are outsourced."
                        android:textSize="14dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view4"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/foto5"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/residence_2" />
                    <TextView
                        android:id="@+id/title5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/foto5"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="Distance from School"
                        android:textColor="#222"
                        android:textStyle="bold"
                        android:textSize="22dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title5"
                        android:padding="8dp"
                        android:text="Most of our houses / apartments are located within walking distance of Dublin city centre (20 - 40 minutes on foot). Other accommodation is within 40 minutes by public transport or by bicycle. ISE do not guarantee availability in central accommodation."
                        android:textSize="14dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view6"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/foto6"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/residence_3" />
                    <TextView
                        android:id="@+id/title6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/foto6"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="Facilites"
                        android:textColor="#222"
                        android:textStyle="bold"
                        android:textSize="22dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title6"
                        android:padding="8dp"
                        android:text="Single, twin and multi-bedded room Washing and cooking facilities for self-catering, high- speed Wi-Fi connection and complete bedding. Our prices include the bills (electricity, gas, water, bins) and free Wi-Fi Internet connection."
                        android:textSize="14dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>